{
  "name": "lottery-backend",
  "version": "1.0.0",
  "description": "Backend para Plataforma de Loter√≠a con Node.js, Express, Prisma y Supabase.",
  "main": "dist/index.js",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "npx dotenv-cli -e .env.local -- nodemon src/index.ts",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "prisma:format": "prisma format --schema=./src/prisma/schema.prisma",
    "prisma:generate": "prisma generate --schema=./src/prisma/schema.prisma",
    "studio": "npx dotenv-cli -e .env.local -- prisma studio --schema=./src/prisma/schema.prisma",
    "studio:test": "npx dotenv-cli -e .env.test -- prisma studio --schema=./src/prisma/schema.prisma",
    "migrate:create": "npx dotenv-cli -e .env.local -- prisma migrate dev --create-only --schema=./src/prisma/schema.prisma",
    "migrate:dev": "npx dotenv-cli -e .env.local -- prisma migrate dev --schema=./src/prisma/schema.prisma",
    "migrate:deploy": "node scripts/safe-deploy-check.js && npx dotenv-cli -e .env.local -- prisma migrate deploy --schema=./src/prisma/schema.prisma",
    "migrate:status": "npx dotenv-cli -e .env.local -- prisma migrate status --schema=./src/prisma/schema.prisma",
    "migrate:resolve": "npx dotenv-cli -e .env.local -- prisma migrate resolve --schema=./src/prisma/schema.prisma",
    "db:push": "npx dotenv-cli -e .env.local -- prisma db push --schema=./src/prisma/schema.prisma",
    "db:pull": "npx dotenv-cli -e .env.local -- prisma db pull --schema=./src/prisma/schema.prisma",
    "prisma:seed": "npx dotenv-cli -e .env.local -- ts-node src/prisma/seed.ts",
    "prisma:seed:test": "npx dotenv-cli -e .env.test -- ts-node src/prisma/seed.ts",
    "test": "npx dotenv-cli -e .env.test -- jest --runInBand --detectOpenHandles",
    "test:watch": "npx dotenv-cli -e .env.test -- jest --watch",
    "test:coverage": "npx dotenv-cli -e .env.test -- jest --coverage"
  },
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "@sentry/node": "^10.17.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "decimal.js": "^10.6.0",
    "dotenv": "^16.6.1",
    "dotenv-safe": "^9.1.0",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "pino": "^10.0.0",
    "uuid": "^13.0.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/dotenv-safe": "^9.1.0",
    "@types/express": "^4.17.23",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.19.19",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "chalk": "^5.6.2",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.3",
    "nodemon": "^3.1.0",
    "pg": "^8.16.3",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "prisma": "^6.18.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
